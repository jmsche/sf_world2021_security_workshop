{% extends 'base.html.twig' %}

{% block body %}
    <div class="py-5 text-center">
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            <h1>Hey there {{ app.user.email }}!</h1>
            <span>
                <strong>Last Login Date:</strong>
                {{ app.user.lastLoggedInAt ? app.user.lastLoggedInAt|ago : 'unknown' }}
            </span>
        {% else %}
            <h1>Hey Stranger!</h1>
        {% endif %}

    <p>
        {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
            Whelp, there's nothing else to see. Have a cool day... or
            <a href="{{ path('app_security_logout') }}">log out</a>...or
            <a href="{{ path('app_2fa_enable') }}">Enable 2fa</a>
        {% else %}
            I guess you can <a href="{{ path('app_login') }}">Log In</a> if you want!
        {% endif %}
    </p>
    </div>
{% endblock %}
